<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context ="edu.pms.z2h_old.myclimbers.MainActivity"
    android:gravity="center" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:layout_centerInParent="true"
        android:src="@drawable/mountain_img" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
       
        android:stretchColumns="*" >

       
        <TableRow
            
            android:layout_weight="3"
            android:gravity="center" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" >

                <ImageButton
                    android:id="@+id/btnCheckin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/btn_checkin" />

                <TextView
                    android:id="@+id/txtCheckin"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnCheckin"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:text="@string/checkin" />
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:background="@color/white"
            android:layout_weight="2"
            android:gravity="center" >
              <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" >

                <ImageButton
                    android:id="@+id/btnMount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="viewMountain"
                    android:background="@color/white"
                    android:src="@drawable/btn_mountain" />

                <TextView
                    android:id="@+id/txtMount"
                    style="@style/TextClimbers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnMount"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:text="@string/mountain" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" >

                <ImageButton
                    android:id="@+id/btnCompass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:onClick="viewCompass"
                    android:background="@color/white"
                    android:src="@drawable/btn_compass" />

                <TextView
                    android:id="@+id/txtCompass"
                    style="@style/TextClimbers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnCompass"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:text="@string/compass" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" >

                <ImageButton
                    android:id="@+id/btnLog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:src="@drawable/btn_log" />

                <TextView
                    android:id="@+id/txtLog"
                    style="@style/TextClimbers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnLog"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:text="@string/log" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" >

                <ImageButton
                    android:id="@+id/btnEmergency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:src="@drawable/btn_emergency" />

                <TextView
                    android:id="@+id/txtEmergency"
                    style="@style/TextClimbers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnEmergency"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:text="@string/emergency" />
            </RelativeLayout>
        </TableRow>
    </TableLayout>

</RelativeLayout>